!!! 5
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}
    %meta{[{"http-equiv", "X-UA-Compatible"}, {"content", "IE=edge"}]}
    %meta{name: "viewport" content: "width: device-width, initial-scale=1"}
    %meta{name: "description" content: ""}
    %meta{name: "author" content: ""}

    %title= site_title
    %link{href: "/css/active_admin.css.css" media="screen" rel="stylesheet" type="text/css"}
    //%script{src: "/js/active_admin/application.js.js", type: "text/javascript"}
    //%script{src: "/js/active_admin/base.js.js", type: "text/javascript"}
    //%script{src: "/js/active_admin/lib/batch_actions.js.js"}
    %script{src: "/js/jquery.js"}


    - resource_label = ExAdmin.Utils.get_resource_label(@conn) |> String.downcase

    %body{class: "index admin_#{resource_label} active_admin logged_in admin_namespace"}
      #wrapper
        .header#header
          %h1{class: "site_title", id: "site_title"}= site_title
          = ExAdmin.Navigation.nav_view(@conn)
          - if ExAdmin.Utils.use_authentication and is_function(:current_user, 1) do
            %p.header-item#utility_nav
              %span{class: "current_user"}= apply(:current_user, [@conn]).name
              = link "Logout", to: apply(:session_path, [@conn, :destroy]), "data-method": "delete", rel: "nofollow"
            
        = title_bar(@conn, @resource)
        = ExAdmin.ViewHelpers.flashes(@conn)
        - if @filters do
          #active_admin_content.with_sidebar
            #main_content_wrapper
              #main_content
                = @inner
            #sidebar
              = ExAdmin.Filter.filter_view(@conn, @filters, @defn) 
        - else 
          #active_admin_content.without_sidebar
            #main_content_wrapper
              #main_content
                = @inner

        %footer#footer{style: "font-size: 90%"}
          %hr
          Powered by UC<sup>x</sup>. Licensed by&nbsp;
          <a href="http://emetrotel.com" target="_blank">E-MetroTel</a>
          &nbsp;&copy 2013-2015.
      #ui-datepicker-div.ui-datepicker.ui-widget.ui-widget-content.ui-helper-clearfix.ui-corner-all
    
    <script src="<%= static_path(@conn, "/js/app.js") %>"></script>
    <script>require("web/static/js/app")</script>
